{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ObsidianIRC",
  "version": "../package.json",
  "identifier": "com.obsidianirc.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ObsidianIRC",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        {
          "schemes": ["irc", "ircs"],
          "host": "*"
        },
        {
          "host": "obsidianirc.github.io",
          "pathPrefix": [
            "/"
          ]
        }
      ],
      "desktop": {
        "schemes": [
          "irc",
          "ircs"
        ]
      }
    }
  }
}
